mixin text-field(params = {})
  -
    const {
      type= "",
      name= "",
      placeholder= "",
      value= "",
      required= true, 
      autofocus= false, 
      disabled= false,
      focused= false,
      masked= false,
      withArrowButton= false,
    } = params;

    const focusedInput = focused ? "text-field__input_focused" : "";
    const valueInput = focused ? "This is pretty awesome" : "";
    const maskedInput = masked ? "text-field__input_masked" : "";

    const inputAttributes = {
      type: type,
      name: name,
      placeholder: placeholder,
      autofocus: autofocus,
      required: required,
      disabled: disabled,
      value: valueInput,
    }

  label.text-field
    input.text-field__input(class= `${focusedInput} ${maskedInput}`)&attributes(inputAttributes)
    if withArrowButton
      .text-field__button