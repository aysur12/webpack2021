extends ../../layouts/ui-kit-layout/ui-kit-layout

include ../../components/logo/logo
include ../../components/title-input/title-input
include ../../components/desc-state-input/desc-state-input
include ../../components/text-field/text-field
include ../../components/dropdown-common-value/dropdown-common-value

include ../../components/checkbox-list/checkbox-list
include ../../components/benefit/benefit

include ../../components/checkbox/checkbox
include ../../components/radio/radio
include ../../components/toggle/toggle
include ../../components/like-button/like-button
include ../../components/rate-button/rate-button

include ../../components/bullet/bullet

block variables
  title Form elements

block content
  main.form-elements
    .form-elements__logo-link
      +logo({typeLogo: "logoColorless"})
    .form-elements__grid
      .form-elements__grid-wrap-left
        .form-elements__text-field-heading
          .form-elements__title-input_without-margin-bottom(
            class= "form-elements__title-input_padding_top")
            +title-input("text field")
          .form-elements__desc-state-input(
            class= "form-elements__desc-state-input_padding_bottom"
          ) 
            +desc-state-input("default")
        .form-elements__text-field 
          +text-field({
            type: "email",
            name: "email",
            placeholder: "Email",
          })
        .form-elements__text-field-heading 
          .form-elements__title-input_without-margin-bottom
            +title-input("text field")
          .form-elements__desc-state-input 
            +desc-state-input("hover / focus")
        .form-elements__text-field 
          +text-field({
            type: "text",
            name: "text",
            placeholder: "This is pretty awesome",
            focused: true
          })  
        .form-elements__title-input_dropdown
          +title-input("dropdown")  
        .form-elements__dropdown-common-value 
          +dropdown-common-value({
            params: {open: false},
            elements: [
              {title: "Взрослые"},
              {title: "Дети"},
              {title: "Младенцы"},
            ]
          })  
        .form-elements__title-input_text-field
          +title-input("masked text field") 
        .form-elements__masked-text-field 
          +text-field({
            type: "text",
            name: "dateOfBirth",
            placeholder: "ДД.ММ.ГГГГ",
            masked: true
          }) 
        .form-elements__title-input_text-field
            +title-input("subscription text field")    
        .form-elements__text-field_subscribe
          +text-field({
            type: "text",
            name: "email",
            placeholder: "Email",
            withArrowButton: true
          })
        .form-elements__checkbox-list_closed
          +checkbox-list({
            open: false,
            title: "expandable checkbox list",
          })
        .form-elements__checkbox-list
          +checkbox-list({
            open: true,
            title: "expandable checkbox list",
          })
        .form-elements__benefit
          +benefit({
            benefitIcon: "insert_emoticon",
            title: "Комфорт",
            text: "Шумопоглощающие стены"
          })
        .form-elements__benefit
          +benefit({
            benefitIcon: "location_city",
            title: "Удобство",
            text: "Окно в каждой из спален"
          })  
      .form-elements__grid-wrap-center  
        .form-elements__title-input
            +title-input("checkbox buttons")
        .form-elements__checkbox-group    
          +checkbox({
            text: "Можно курить",
            checked: false,
          })
          +checkbox({
            text: "Можно с питомцами",
            checked: true,
          })
          +checkbox({
            text: "Можно пригласить гостей (до 10 человек)",
            checked: true,
          }) 
        .form-elements__title-input
          +title-input("radio buttons")
        .form-elements__radio-group
          .form-elements__radio
            +radio({
              text: "Мужчина",
              checked: true,
            })
          .form-elements__radio
            +radio({
              text: "Женщина",
              checked: false,
            })
        .form-elements__title-input
          +title-input("toggle")
        .form-elements__toggle
          +toggle({
            text: "Получать спецпредложения",
            checked: true,
          })    
          +toggle({
            text: "Получать спецпредложения",
            checked: false,
          })
        .form-elements__title-input
          +title-input("like button")
        .form-elements__like-button
          +like-button({
            count: 2,
            isActive: false,
          })
          +like-button({
            count: 12,
            isActive: true,
          })
        .form-elements__title-input
          +title-input("rate button") 
        .form-elements__rate-button
          +rate-button({
            rating: 4,
          })
          +rate-button({
            rating: 5,
          })
        .form-elements__title-input
          +title-input("rich checkbox buttons") 
        .form-elements__rich-checkbox-group
          +checkbox({
            text: "Ширина коридоров в номере не менее 91 см.",
            checked: false,
            rich: true,
            title: "Широкий коридор",
            textBoxSizeSmall: true,
          })
          +checkbox({
            text: "На 1 этаже вас встретит специалист  и проводит до номера.",
            checked: false,
            rich: true,
            title: "Помощник для инвалидов"
          })
      .form-elements__grid-wrap-right
        .form-elements__title-input
          +title-input("bullet list")
        .form-elements__bullet 
          +bullet("Нельзя с питомцами")
          +bullet("Без вечеринок и мероприятий")
          +bullet("Время прибытия — после 13:00, а выезд до 12:00")
        

